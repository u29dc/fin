{
	"name": "acc",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"prepare": "husky",
		"dev": "bun run --filter web dev",
		"build": "bun run --filter web build",
		"preview": "bun run --filter web preview",
		"cli": "bun run packages/cli/src/index.ts",
		"import:inbox": "bun run cli import",
		"sanitize:discover": "bun run cli sanitize discover",
		"sanitize:discover:unmapped": "bun run cli sanitize discover --unmapped",
		"sanitize:migrate": "bun run cli sanitize migrate",
		"sanitize:migrate:dry": "bun run cli sanitize migrate --dry-run --verbose",
		"demo:generate": "bun run packages/core/src/demo/generate-demo-data.ts",
		"backup": "bun run packages/core/src/scripts/backup.ts",
		"util:format": "biome format --write .",
		"util:lint": "biome check . --max-diagnostics 500",
		"util:lint:fix": "biome check --write .",
		"util:types": "tsc --noEmit",
		"util:clean": "rm -rf .svelte-kit dist build packages/**/.svelte-kit packages/**/dist packages/**/build packages/**/node_modules/.vite",
		"util:check": "STATUS=0; bun run util:format || STATUS=1; bun run util:lint || STATUS=1; bun run util:types || STATUS=1; bun test || STATUS=1; exit $STATUS"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@commitlint/cli": "^20.3.0",
		"@commitlint/config-conventional": "^20.3.0",
		"bun-types": "^1.3.5",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"typescript": "^5.9.3"
	}
}
