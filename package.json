{
	"name": "fin",
	"version": "0.0.1",
	"type": "module",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/u29dc/fin.git"
	},
	"scripts": {
		"init---------------------------------": "",
		"prepare": "husky",
		"build:cli": "bun build --compile packages/cli/src/index.ts --outfile bin/let && rm -f .*.bun-build",
		"dev----------------------------------": "",
		"dev": "bun run --filter @fin/web dev",
		"build": "bun run --filter @fin/web build",
		"preview": "bun run --filter @fin/web preview",
		"fin": "bun run packages/cli/src/index.ts",
		"data---------------------------------": "",
		"import:inbox": "bun run fin import",
		"sanitize:discover": "bun run fin sanitize discover",
		"sanitize:discover:unmapped": "bun run fin sanitize discover --unmapped",
		"sanitize:migrate": "bun run fin sanitize migrate",
		"sanitize:migrate:dry": "bun run fin sanitize migrate --dry-run --verbose",
		"demo:generate": "bun run packages/core/src/demo/generate-demo-data.ts",
		"backup": "bun run packages/core/src/scripts/backup.ts",
		"check--------------------------------": "",
		"util:format": "biome format --write .",
		"util:lint": "biome check . --max-diagnostics 500",
		"util:lint:fix": "biome check --write .",
		"util:types": "tsgo --noEmit",
		"util:clean": "rm -rf .svelte-kit dist build packages/**/.svelte-kit packages/**/dist packages/**/build packages/**/node_modules/.vite",
		"util:check": "STATUS=0; bun run util:format || STATUS=1; bun run util:lint || STATUS=1; bun run util:types || STATUS=1; bun test || STATUS=1; exit $STATUS"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@typescript/native-preview": "^7.0.0-dev.20260107.1",
		"@commitlint/cli": "^20.3.0",
		"@commitlint/config-conventional": "^20.3.0",
		"bun-types": "^1.3.5",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7"
	}
}
